<% provide(:title, "Domestic")%>
<div class="content">
    <div class="container">
    <div class="row text-center">
       <div class="tourViet">
       <% if params[:filter] == "tours_domestic" %>
          <h1>Tour Trong Nước</h1>
            <p>Việt Nam vẻ đẹp bất tận, điểm đến của mọi nhà!!!</p>   
            <% @tours_domestic.each do |tour_domestic| %>
                <div class="col-sm-3 "> 
                    <div class="thumbnail ">
                    <%= link_to tour_domestic, class: 'images' do %>
                        <%= image_tag 'nhatrang.jpg', class: '' %>
                    <% end %>
                    <p><strong > <%= tour_domestic.name %></strong></p>
                    <%= link_to 'Xem Tour', tour_domestic, class: 'xemTour btn'%>
                    </div>                     
                </div>
            <% end %>
        <% else %>
            <h1>Tour Thế Giới</h1>
            <p>thees gioi vẻ đẹp bất tận, điểm đến của mọi nhà!!!</p>   
            <% @tours_international.each do |tour_international| %>
                <div class="col-sm-3 "> 
                    <div class="thumbnail ">
                    <%= link_to tour_international, class: 'images' do %>
                    <%= image_tag 'thailand.jpg', class: '' %>
                    <% end %>
                    <p><strong > <%= tour_international.name %></strong></p>
                    <%= link_to 'Xem Tour', tour_international, class: 'xemTour btn'%>
                    </div>                     
                </div>
            <% end %>
        <% end %>  
        </div>
    </div>
</div> 
