<% provide(:title, "Danh Sach Tour")%>
<div class="content">
    <div class="search">
        <div class="container text-center">
            <%= search_form_for @search ,class: "form-inline" do |f| %>
                <div class="input-group">
                    <!-- <input type="text" class="form-control" size="150" placeholder="Bạn Muốn Đi Đâu?" required/> -->
                    <%= f.text_field :name_or_itinerary_cont, class: "form-control", size: "150", placeholder: "Bạn Muốn Đi Đâu?" %>
                    <div class="input-group-btn" >
                        <%= submit_tag "Tìm Tour", class: "btn btn-warning" %>
                    </div>
                </div>
            <% end %>
      </div>
    </div>
    <div class="container">
    <div class="row text-center">
       <div class="tourViet">
          <h1>Danh Sach Tour</h1>
            <p>Việt Nam vẻ đẹp bất tận, điểm đến của mọi nhà!!!</p>  
            <% if @tours.blank? %> 
                <div class="col-sm-3 "> 
                       <h2 class="no_find">khong co tour can tim</h2>  
                </div>
            <% else %>
                <% @tours.each do |tour| %>
                    <div class="col-sm-3 "> 
                        <div class="thumbnail ">
                        <%= link_to tour, class: 'images' do %>
                            <%= image_tag tour.image.thumb.url if tour.image? %>
                        <% end %>
                        <p><strong > <%= tour.name %></strong></p>
                        <%= link_to 'Xem Tour', tour, class: 'xemTour btn'%>
                        </div>                     
                    </div>
                <% end %>
            <% end %>
        </div>
    </div>
</div> 
