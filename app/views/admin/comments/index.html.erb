<% provide(:title, "quan ly binh luan")%>
<div class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">
        <div class="card">
          <div class="card-header card-header-primary" >
            <h4 class="card-title ">Bình Luận</h4>
          </div>
          <div class="card-body">
            <div class="table-responsive">
              <table class="table">
                <thead class=" text-primary text-center">
                  <th>ID</th>
                  <th>Tên Tour</th>
                  <th>Hình Ảnh</th>
                  <th class="ct" >Nội Dung</th>
                  <th>Chức Năng</th>
                </thead>
                <tbody>
                  <% @admin_comments.each do |admin_comment| %>
                  <tr class="text-center">
                    <td><%= admin_comment.id %></td>
                    <td><%= admin_comment.review.tour.name %>  </td>
                    <td></td>
                    <td class="ct" id="nd">
                    <%= admin_comment.content %>        
                    </td>
                    <td>
                       <%= link_to admin_comment_path(admin_comment), method: :delete,data: { confirm: "ban muon xoa binh luan?" } do %>
                         Delete
                       <%= image_tag("delete.png") %>
                        <% end %>
                    </td>
                  </tr> 
                  <% end %>                                                                         
                </tbody>
              </table>
            </div>
          </div>
           <%= will_paginate @admin_comments %>
        </div>
        
      </div>
</div>
</div>