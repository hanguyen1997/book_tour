      </div>
      <div class="sidebar-wrapper">
        <ul class="nav">
          <li class="nav-item ">
            <%= link_to admin_root_path, class: "nav-link" do %>
              <i class="fa fa-home" aria-hidden="true"></i>
              <p>Trang chủ</p>
            <% end %>
          </li>
          <li class="nav-item ">
            <%= link_to admin_categories_path, class: "nav-link" do %>
