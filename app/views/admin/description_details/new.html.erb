<% provide(:title, "Thêm Mới Chi Tiết Tour")%>
<div class="content">
        <div class="container-fluid">
          <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
              <div class="card">
                <div class="card-header card-header-primary">
                  <h4 class="card-title">Thêm Ngày và Giá Tour</h4>
                </div>
                <div class="card-body">
                  <%= form_for [:admin, :tour, @description_detail] do |f| %>
                    <div class="row">
                      <div class="col-md-6">
                        <div class="form-group">
                          <%= f.label :start_day , class: 'bmd-label-floating' do %>
                          <span class="fa fa-calendar-check-o"> Ngày Khởi Hành
                          <% end %>
                          <%= f.date_field :start_day, class: "form-control" %>
                        </div>
                      </div>
                      <div class="col-md-6">
                        <div class="form-group">
                          <%= f.label :end_day, class: 'bmd-label-floating' do %>
                          <span class="fa fa-calendar-check-o"> Ngày Kết Thúc
                          <% end %>
                          <%= f.date_field :end_day, class: "form-control" %>
                        </div>
                      </div>
                    </div>
                   
                    <div class="row">
                      <div class="col-md-6">
                        <div class="form-group">
                          <%= f.label :price, "Giá Tour" , class: 'bmd-label-floating' %>
                          <%= f.text_field :price, class: "form-control" %>
                        </div>
                      </div>
                      <div class="col-md-6">
                        <div class="form-group">
                          <%= f.label :max_quantity, "Số Chỗ" , class: 'bmd-label-floating' %>
                          <%= f.text_field :max_quantity, class: "form-control" %>
                        </div>
                      </div>                      
                    </div>
                    <div class="row">
                      <div class="col-md-4"></div>
                      <div class="col-md-3">
                        <button type="submit" class="btn btn-warning text-center">Thêm Mới</button>
                      </div>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
</div>   
