<% provide(:title, "Sữa Thông Tin Tài Khoản")%>
<div class="ThongTin">
  <div class="container">
    <div class="row">
      <div id="navbarUser" class="col-sm-3">
        <ul class="tt">
          <li>
            <%= link_to(raw("<span class='glyphicon glyphicon-list-alt'> Thông Tin </span>"), current_user) %></li>
          <li>
          <li>
            <%= link_to(raw("<span class='glyphicon glyphicon-send'> Danh Sách Tour </span>"), history_path) %></li>
          <li>
        </ul>                 
      </div>
      <div id="infoUser2" class="col-sm-7">
        <h3 class="text-center">Chỉnh Sữa Thông Tin Tài Khoản</h3>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <div class="form-group">
              <%= f.label :name," TÊN", class: "glyphicon glyphicon-user"  %><br/>
              <%= f.text_field :name, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :email," GMAIL", class: "glyphicon glyphicon-envelope" %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control',  readonly: "False" %>
            </div>
            <div class="form-group">
              <%= f.label :password," MẬT KHẨU", class: "glyphicon glyphicon-eye-open" %> <i>(để trống nếu bạn không muốn thay đổi nó)</i><br />
              <%= f.password_field :password, class: 'form-control', autocomplete: "new-password" %>
              <% if @minimum_password_length %>
                <br />
                <em>Tối thiểu  <%= @minimum_password_length %> ký tự</em>
              <% end %>
            </div>
            <div class="form-group">
              <%= f.label :password_confirmation," NHẬP LẠI MẬT KHẨU", class: "glyphicon glyphicon-eye-open"  %><br />
              <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: "new-password" %>
            </div>
            <div class="form-group">
              <%= f.label :current_password," XAC NHẬN LẠI MẬT KHẨU CŨ", class: "glyphicon glyphicon-eye-open"  %> <i>(chúng tôi cần mật khẩu hiện tại của bạn để xác nhận thay đổi)</i><br />
              <%= f.password_field :current_password, class: 'form-control', autocomplete: "current-password" %>
            </div>
            <div class="form-group">
              <%= f.label :address," ĐỊA CHỈ", class: "glyphicon glyphicon-map-marker" %>
              <%= f.text_field :address, class: 'form-control'%>
            </div>
            <div class="form-group">
              <%= f.label :phone_number," SÔ ĐIỆN THOẠI", class: "glyphicon glyphicon-earphone" %>
              <%= f.text_field :phone_number, class: 'form-control'%>
            </div>
             <%= f.submit "Cập Nhật", class: "btn btn-warning btn-block" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
















