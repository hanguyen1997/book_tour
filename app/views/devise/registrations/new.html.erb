<% provide(:title, "Dang Ky")%>
<html lang="en">
<body>
<div class="login">
    <div class="modal-dialog">    
      <div class="modal-content">
        <div class="modal-header">
          <h1> Đăng Ky</h1>
        </div>
        <div class="modal-body">
          <div class="form-group">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <%= render "devise/shared/error_messages", resource: resource %>
                <%= hidden_field_tag "user[role]", "customer" %>
                <div class="form-group">
                  <%= f.label :name," TÊN", class: "glyphicon glyphicon-user"  %><br/>
                  <%= f.text_field :name, class: 'form-control' %>
                </div>
                <div class="form-group">
                  <%= f.label :email," GMAIL", class: "glyphicon glyphicon-envelope" %><br />
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
                </div>
                <div class="form-group">
                  <%= f.label :password," MẬT KHẨU", class: "glyphicon glyphicon-eye-open" %> 
                  <%= f.password_field :password, class: 'form-control', autocomplete: "new-password" %>
                  <% if @minimum_password_length %>
                    <br />
                    <em>Tối thiểu  <%= @minimum_password_length %> ký tự</em>
                  <% end %>
                </div>
                <div class="form-group">
                  <%= f.label :password_confirmation," NHẬP LẠI MẬT KHẨU", class: "glyphicon glyphicon-eye-open"  %><br />
                  <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: "new-password" %>
                </div>
                <div class="form-group">
                  <%= f.label :address," ĐỊA CHỈ", class: "glyphicon glyphicon-map-marker" %>
                  <%= f.text_field :address, class: 'form-control'%>
                </div>
                <div class="form-group">
                  <%= f.label :phone_number," SÔ ĐIỆN THOẠI", class: "glyphicon glyphicon-earphone" %>
                  <%= f.text_field :phone_number, class: 'form-control'%>
                </div>
                 <%= f.submit "DAng Ky", class: "btn btn-warning btn-block" %>
            <% end %>
          </div>
        </div>
      </div>      
    </div>
</div>
  </body>
</html>
