<% provide(:title, "Sữa Thông Tin Tài Khoản")%>
<div class="ThongTin">
	<div class="container">
		<div class="row">
			<div id="navbarUser" class="col-sm-3">
				<ul class="tt">
          <li>
            <%= link_to(raw("<span class='glyphicon glyphicon-list-alt'> Thông Tin </span>"), current_user) %></li>
          <li>
          <li>
            <%= link_to(raw("<span class='glyphicon glyphicon-send'> Danh Sách Tour </span>"), current_user) %></li>
          <li>
        </ul> 								
			</div>
			<div id="infoUser2" class="col-sm-7">
				<h3 class="text-center">Thông Tin Tài Khoảng</h3>
          <%= form_for(@user) do |f| %>
            <div class="form-group">
				      <%= f.label :name, class: "glyphicon glyphicon-user" %>
              <%= f.text_field :name, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :email, class: "glyphicon glyphicon-envelope" %>
              <%= f.email_field :email, class: 'form-control',  readonly: "False"%>
            </div>
            <div class="form-group">
              <%= f.label :password, class: "glyphicon glyphicon-eye-open" %>
              <%= f.password_field :password, class: 'form-control'%>
            </div>
            <div class="form-group">
              <%= f.label :password_confirmation, class: "glyphicon glyphicon-eye-open" %>
              <%= f.password_field :password_confirmation, class: 'form-control'%>
            </div>
            <div class="form-group">
              <%= f.label :address, class: "glyphicon glyphicon-map-marker" %>
              <%= f.text_field :address, class: 'form-control'%>
            </div>
            <div class="form-group">
              <%= f.label :phone_number, class: "glyphicon glyphicon-earphone" %>
              <%= f.text_field :phone_number, class: 'form-control'%>
            </div>
            <%= f.submit "Cập Nhật", class: "btn btn-warning btn-block" %>
        <% end %>
				 
			</div>
		</div>
	</div>
</div>

